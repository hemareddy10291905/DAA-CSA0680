import random

# Function to generate a random array of integers
def generate_random_array(size, min_val, max_val):
    return [random.randint(min_val, max_val) for _ in range(size)]

# Function to sort an array
def sort_array(arr):
    return sorted(arr)

# Example usage
size = 10  # Size of the array
min_val = 1  # Minimum value for random integers
max_val = 100  # Maximum value for random integers

# Generate a random array
random_array = generate_random_array(size, min_val, max_val)

# Sort the array
sorted_array = sort_array(random_array)

# Print the original and sorted arrays
print("Original Array:", random_array)
print("Sorted Array:", sorted_array)
