# Function to create a reverse sorted array
def create_reverse_sorted_array(size):
    return list(range(size, 0, -1))

# Function to sort an array
def sort_array(arr):
    return sorted(arr)

# Example usage
size = 10  # Size of the array

# Create a reverse sorted array
reverse_sorted_array = create_reverse_sorted_array(size)

# Sort the array
sorted_array = sort_array(reverse_sorted_array)

# Print the original and sorted arrays
print("Reverse Sorted Array:", reverse_sorted_array)
print("Sorted Array:", sorted_array)
